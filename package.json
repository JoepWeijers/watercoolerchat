{
  "name": "watercoolerchat",
  "version": "1.0.0",
  "description": "",
  "main": "./main.js",
  "type": "module",
  "scripts": {
    "start": "node --experimental-modules .",
    "test": "c8 --all tap",
    "lint": "xo"
  },
  "tap": {
    "coverage": false,
    "esm": false,
    "node-arg": [
      "--experimental-modules"
    ],
    "reporter": "spec"
  },
  "engines": {
    "node": ">= 12.16 < 13"
  },
  "xo": {
    "rules": {
      "import/extensions": [
        "error",
        "ignorePackages"
      ],
      "operator-linebreak": [
        "error",
        "after",
        {
          "overrides": {
            "?": "before",
            ":": "before"
          }
        }
      ]
    },
    "ignores": [
      "lib/__*.js"
    ],
    "overrides": [
      {
        "files": "public/**/*.js",
        "envs": [
          "es6",
          "browser"
        ]
      }
    ]
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@koa/router": "^8.0.8",
    "isomorphic-fetch": "^2.2.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-send": "^5.0.0",
    "koa-static": "^5.0.0",
    "mongodb": "^3.5.5",
    "uuid": "^7.0.2",
    "web-push": "^3.4.3"
  },
  "devDependencies": {
    "c8": "^7.1.0",
    "tap": "^14.10.7",
    "xo": "^0.28.2"
  }
}
